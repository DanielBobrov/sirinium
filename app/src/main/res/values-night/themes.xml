<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"> <!--
    Базовая тема приложения для темного режима.
    -->
    <style name="Theme.SiriniumSchedule" parent="android:Theme.Material.NoActionBar">
        <!--
            Атрибуты для темного режима.
            windowLightStatusBar должно быть false для темного режима,
            чтобы системные иконки статус-бара были светлыми.
        -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

</resources>
