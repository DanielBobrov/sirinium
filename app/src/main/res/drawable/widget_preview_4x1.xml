<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Белый фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <size android:height="25dp" />
            <size android:width="100dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Цветной прямоугольник справа для аудитории -->
    <item android:gravity="end|center_vertical" android:width="30dp" android:right="5dp" android:bottom="5dp" android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF03DAC5" /> <!-- Примерный цвет (бирюзовый) -->
            <corners
                android:topLeftRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomRightRadius="4dp" />
        </shape>
    </item>
</layer-list>
